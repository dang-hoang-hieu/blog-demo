<li id="<%= comment.id %>">
    <%= link_to gravatar_for(comment.user), comment.user %>
    <span class="user">
      <%= link_to comment.user.name, comment.user %>
    </span>
  <section>
    <%= wrap(comment.content) %>
    <br>
    <span class="timestamp">Posted <%= time_ago_in_words(comment.created_at) %> ago.</span>
    <%= render "shared/delete_link", object: comment %>
  </section>  
</li>