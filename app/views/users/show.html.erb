<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <% if current_user?(@user) %>
    <section>
      <%= link_to "Create new entry", new_entry_path if signed_in? %>
    </section>
    <section>
      <%= link_to "My following entries", '/following-entries' if signed_in? %>
    </section>
    <% end %>
  </aside>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <h3>Stories</h3>
    <%= render 'shared/entries' %>
  </div>
</div>
