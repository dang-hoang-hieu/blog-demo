<div class="row">
	<div class="span6 offset3">
		<h1><%= @entry.title %></h1>
		<section>
			<%= wrap(@entry.body) %>
		</section>
		<section>
			<h2>comments</h2>

			<%= render "shared/comment_form"  if signed_in? %>

			<ol id="comment">
